<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_list"
    android:id="@+id/main_layout"
    tools:context=".Activities.Splash">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/splash_background"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sound_img"
            android:src="@drawable/ic_sound_on"
            android:layout_margin="20dp"
            />

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/dailyrewardsbtn"
            android:layout_centerHorizontal="true"
            android:text="Daily Rewards"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/daily_rewards_bg"
            />

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dailyrewardsbtn"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/playbtn"
            android:layout_centerHorizontal="true"
            android:text="Play Quiz"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/play_button_bg"
            />

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/playbtn"
            android:layout_marginTop="20dp"
            android:id="@+id/spinbtn"
            android:layout_centerHorizontal="true"
            android:text="Spin and Win"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/spin_button_bg"
            android:layout_marginBottom="50sp"
            />
    </RelativeLayout>

</RelativeLayout>